<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_orderplacing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pb.nex26dv.shippingapp.orderplacing">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageView5"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:gravity="center"
                android:ems="10"
                android:id="@+id/senderEditText"
                android:hint="@string/sender_name"
                android:layout_above="@+id/sMobileEditText"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/sMobileEditText"
                android:hint="@string/sender_mobile"
                android:layout_alignBottom="@+id/imageView5"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="match_parent"
                android:inputType="textPostalAddress"
                android:gravity="center"
                android:ems="10"
                android:id="@+id/sPostalAddressEditText"
                android:hint="@string/sender_postal_address"
                android:layout_above="@+id/weightEditText"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="18dp"
                android:layout_weight="2.64"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="match_parent"
                android:inputType="textPostalAddress"
                android:gravity="center"
                android:ems="10"
                android:id="@+id/sPostalCodeEditText"
                android:hint="@string/sender_postal_code"
                android:layout_above="@+id/weightEditText"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="18dp"
                android:layout_weight="0.94"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="match_parent"
                android:inputType="textPostalAddress"
                android:gravity="center"
                android:ems="10"
                android:id="@+id/sCountryCodeEditText"
                android:hint="@string/sender_country_code"
                android:layout_above="@+id/weightEditText"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="18dp"
                android:layout_weight="0.94"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:gravity="center"
                android:ems="10"
                android:id="@+id/rNameEditText"
                android:hint="@string/receiver_name"
                android:layout_above="@+id/sMobileEditText"
                android:layout_alignParentStart="true"
                android:layout_weight="0.94" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/rMobileEditText"
                android:hint="@string/receiver_mobile"
