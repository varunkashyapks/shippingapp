                android:layout_weight="0.94"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="match_parent"
                android:inputType="textPostalAddress"
                android:gravity="center"
                android:ems="10"
                android:id="@+id/rPostalCodeEditText"
                android:hint="@string/receiver_postal_code"
                android:layout_above="@+id/weightEditText"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="18dp"
                android:layout_weight="0.94"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/rCountryCodeEditText"
                android:hint="@string/receiver_country_code"
                android:layout_above="@+id/weightEditText"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="match_parent"
                android:inputType="numberDecimal"
                android:gravity="center"
                android:ems="10"
                android:id="@+id/weightEditText"
                android:hint="Weight (In Ounces)"
                android:layout_above="@+id/order_camer_button"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="18dp"
                android:layout_weight="0.94"
                android:layout_height="wrap_content" />

